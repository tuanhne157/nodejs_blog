<div class="mt-4">
    <h3>Đăng công việc</h3>
    <form method="post" action="/courses/store">
        <div class="mb-3">
            <label for="name" class="form-label">Tên công việc</label>
            <input type="text" class="form-control" id="name" name="name"> 
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <input type="text" class="form-control" id="description" name="description"> 
        </div>

        <div class="mb-3">
            <label for="videoId" class="form-label">Video ID</label>
            <input type="text" class="form-control" id="videoId" name="videoId"> 
        </div>

        <div class="mb-3">
            <label for="deTail" class="form-label">Chi tiết</label>
            <input type="text" class="form-control" id="deTail" name="deTail"> 
        </div>

        <button type="submit" class="btn btn-primary">Thêm công việc</button>
    </form>
</div>